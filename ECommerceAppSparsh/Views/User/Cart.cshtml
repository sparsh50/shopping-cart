@model IEnumerable<ECommerceAppSparsh.Models.CartItem>

@{
    ViewData["Title"] = "Cart";
}
<div class="d-flex justify-content-between">
    <div>
        <h2>Cart</h2>
    </div>
    <div>
        <a class="btn btn-primary" asp-action="Index">Buy More</a>

    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>         
            <th>Total Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int amount = 0;
        }
@foreach (var item in Model) {
           
                int totalPrice = @item.Quantity * @item.Price;
                amount += totalPrice;         
            
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                $@totalPrice.ToString()
                
             </td>

            <td>
                    <a class="btn btn-danger me-2" asp-action="RemoveCartItem" asp-controller="User" asp-route-id="@item.CartItemId">Remove</a>

            </td>
        </tr>
}
    </tbody>
</table>
<p><b>Amount: </b> $@amount.ToString() </p>
<div class="text-center">
    <a class="btn btn-primary me-2" asp-action="CheckOut" asp-controller="User" >Check Out</a>

</div>
